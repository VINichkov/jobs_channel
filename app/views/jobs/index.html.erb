<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Company name</th>
      <th>String</th>
      <th>Company link</th>
      <th>Remote</th>
      <th>Type</th>
      <th>Location</th>
      <th>Salary</th>
      <th>Source</th>
      <th>Contract</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.company_name %></td>
        <td><%= job.string %></td>
        <td><%= job.company_link %></td>
        <td><%= job.remote %></td>
        <td><%= job.type %></td>
        <td><%= job.location %></td>
        <td><%= job.salary %></td>
        <td><%= job.source %></td>
        <td><%= job.contract %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
